<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<title>{_$pageTitle}</title>
		{control css}
		<link rel="shortcut icon" href="{$basePath}/favicon.ico">
		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
			<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		{block head}{/block}
	</head>

	<body class="login-page">
		<div class="login-box">
			<div class="login-logo" n:if="$pageName">
				<b>{_$pageName}</b>
			</div>
			<div class="login-box-body">
				<form n:name="form" class="login-form">
					<div n:foreach="$presenter->template->flashes as $flash" class="alert alert-{$flash->type} alert-dismissable">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						{$flash->message}
					</div>
					<p class="login-box-msg">{_$pageMsg}</p>
					<div n:foreach="$form->errors as $error" class="alert alert-error fade in">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						{_$error}
					</div>
					<div class="form-group has-feedback">
						<input n:name="email" class="form-control">
						<span n:if="$usernameIcon" class="glyphicon glyphicon-{$usernameIcon} form-control-feedback"></span>
					</div>
					<div class="form-group has-feedback">
						<input n:name="password" class="form-control">
						<span n:if="$passwordIcon" class="glyphicon glyphicon-{$passwordIcon} form-control-feedback"></span>
					</div>
					<div class="row">
						<div class="col-xs-8">
							<div class="checkbox">
								<label>
									<input n:name="remember"> {_$form[remember]->caption}
								</label>
							</div>
						</div>
						<div class="col-xs-4">
							<button type="submit" class="btn btn-primary btn-block btn-flat">{_$form[submit]->caption}</button>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12">
							<div class="forgot-password">
								<a id="forget-password" href="javascript:;">{_$forgotPass}</a>
							</div>
						</div>
					</div>
				</form>
				<form n:name="formReset" class="forget-form">
					<h3>{_$forgotPass}</h3>

					<div n:foreach="$form->errors as $error" class="alert alert-danger alert-dismissable">
						<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						{$error}
					</div>

					<div class="form-group has-feedback">
						<input n:name="email" class="form-control">
						<span n:if="$usernameIcon" class="glyphicon glyphicon-{$usernameIcon} form-control-feedback"></span>
					</div>									

					<div class="form-actions">
						<button type="button" id="back-btn" class="btn btn-default btn-flat">
							{_$form[back]->caption} </button>
						<button type="submit" class="btn btn-primary btn-flat pull-right">
							{_$form[submit]->caption}
						</button>
					</div>
				</form>
			</div>
		</div>

		{block scripts}
		{control js}
		{/block}
	</body>
</html>